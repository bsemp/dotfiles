# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Indentation python files
[*.py]
indent_style = space
indent_size = 2

# Indentation toml files
[*.toml]
indent_style = space
indent_size = 2

# Indentation for json and yaml files
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
